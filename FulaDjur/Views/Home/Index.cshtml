@foreach (var djur in Model.Animals)
    {
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="plate center-block">
                        <h1>@Html.DisplayFor(modelItem => djur.Rubrik)</h1>
                        <div class="bg-image bg-image-holder" style="background-image:url(@Url.Content(djur.ImageUrl));"></div>
                        <div>@Html.DisplayFor(modelItem => djur.UglyRating)</div>
                        @foreach (var comment in djur.UglyComments)
                        {
                            <div class="panel panel-info">
                                <div class="panel-heading">
                                    @comment.Name
                                    <span class="glyphicon glyphicon-comment pull-right" aria-hidden="true"></span>
                                </div>
                                <div class="panel-body">
                                    @comment.Text
                                </div>
                            </div>
                        }
                            <div class="panel panel-info">
                                <div class="panel-heading text-center">
                                    <h4>Kommentera</h4>
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("CreateComment", "Home", FormMethod.Post, null))
                                    {
                                        @Html.HiddenFor(model => djur.NewComment.AnimalId)
                                        @Html.EditorFor(model => djur.NewComment.Name)
                                        @Html.EditorFor(model => djur.NewComment.Text)

                                        <input type="submit" value="Skicka" />
                                    }
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    }

@section scripts
{
    <!-- jQuery files -->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/JRating.js"></script>
    <script type="text/javascript">
       
        jQuery(document).ready(function() {
            $('.rating').rating();

            $('.ratingEvent').rating({ rateEnd: function (v) { $('#result').text(v); } });
            console.log($('#result').title);
        });
    </script>
}   
